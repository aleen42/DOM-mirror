{
  "manifest_version"         : 3,
  "name"                     : "DOM Scraper",
  "version"                  : "1.0",
  "background"               : {
    "service_worker" : "background.js"
  },
  "content_scripts"          : [
    {
      "matches" : [
        "<all_urls>"
      ],
      "js"      : [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources" : [
    {
      "matches"   : [
        "<all_urls>"
      ],
      "resources" : [
        "index.js",
        "node_modules/html-minifier-terser/dist/htmlminifier.esm.bundle.js"
      ]
    }
  ],
  "action"                   : {
    "default_title" : "DOM Scraper"
  },
  "permissions"              : [
    "activeTab",
    "downloads"
  ]
}
